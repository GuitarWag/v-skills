{
  "name": "v-skills",
  "version": "0.1.2",
  "description": "Auto-generate AI agent skills from node_modules READMEs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "v-skills": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --import tsx --test tests/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch tests/**/*.test.ts",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "ai",
    "claude",
    "skills",
    "documentation",
    "node_modules",
    "readme",
    "monorepo",
    "workspaces"
  ],
  "author": "Wagner Silva <wagnersilva.eu.cloud@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GuitarWag/v-skills.git"
  },
  "homepage": "https://github.com/GuitarWag/v-skills#readme",
  "bugs": {
    "url": "https://github.com/GuitarWag/v-skills/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
